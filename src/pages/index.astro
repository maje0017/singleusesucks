---
import MainLayout from "../layouts/MainLayout.astro";
import Button from '../components/Button.astro';
import Link from '../components/Link.astro';
import { Image } from 'astro:assets';
import thumbsup from "../assets/images/thumbsup.png";
---
<MainLayout title="SingleUseSucks">
<article>
  <div class="relative w-full h-screen">
    <!-- Background Image -->
    <img src="/ocean2.webp" alt="Baggrunds billede til hero sektion">

    <!-- Huge Title -->
    <h1 class="absolute top-1/4 left-1/2 -translate-x-1/2 -translate-y-1/2 
               text-white text-9xl md:text-9xl font-bold text-center">
        #SingleUseSucks
    </h1>

    <!-- Centered Turtle Image -->
    <div class="absolute top-3/4 left-1/2 -translate-x-1/2 -translate-y-1/2">
      <img src="/turtle.webp" alt="Turtle" class="w-150 md:w-160">
    </div>

    <!-- Fish Images with Rotation -->
    <img src="/fisk1.webp" alt="Fish 1" class="absolute top-3/3 left-2/4 -translate-x-1/2 -translate-y-1/2 w-20 md:w-80 rotate-330">
    <img src="/fisk2.webp" alt="Fish 2" class="absolute top-2/4 right-1/20 -translate-x-1/2 -translate-y-1/2 w-16 md:w-70 -rotate-3">
    <img src="/fisk3.webp" alt="Fish 3" class="absolute top-4/5 left-1/10 -translate-x-1/2 -translate-y-1/2 w-24 md:w-90 rotate-340">
    <img src="/fisk4.webp" alt="Fish 4" class="absolute top-1/2 right-1/4 -translate-x-1/2 -translate-y-1/2 w-20 md:w-110 -rotate-340">
    <img src="/fisk5.webp" alt="Fish 5" class="absolute top-3/4 left-4/5 -translate-x-1/2 -translate-y-1/2 w-18 md:w-60 rotate-20">
    <img src="/fisk6.webp" alt="Fish 6" class="absolute top-2/4 right-2/4 -translate-x-1/2 -translate-y-1/2 w-22 md:w-115 -rotate-40">
  </div>
</article>

<script>
  document.addEventListener("scroll", function () {
    const fish = document.getElementById("parallaxFish");
    let scrollY = window.scrollY;
    fish.style.transform = `translateY(${scrollY * 0.2}px)`;
  });
</script>

</MainLayout>